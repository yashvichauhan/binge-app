@model Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h2 class="page-title">Add Movie</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data" class="movie-form">
    <div class="form-group">
        <label for="Title" class="form-label">Title:</label>
        <input asp-for="Title" class="form-input" required id="Title" />
    </div>

    <div class="form-group">
        <label for="Genre" class="form-label">Genre:</label>
        <input asp-for="Genre" class="form-input" required id="Genre" />
    </div>

    <div class="form-group">
        <label for="Director" class="form-label">Director:</label>
        <input asp-for="Director" class="form-input" required id="Director" />
    </div>

    <div class="form-group">
        <label for="ReleaseTime" class="form-label">Release Time:</label>
        <input asp-for="ReleaseTime" type="datetime-local" class="form-input" required id="ReleaseTime" />
    </div>

    <div class="form-group">
        <label for="Rating" class="form-label">Rating:</label>
        <input asp-for="Rating" type="number" step="0.1" min="0" max="10" class="form-input" required id="Rating" />
    </div>

    <div class="form-group">
        <label for="movieFile" class="form-label">Upload Movie File:</label>
        <input type="file" name="movieFile" accept="video/*" class="form-input" required id="movieFile" />
    </div>

    <button type="submit" class="btn-submit">Add Movie</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="error-messages">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li class="error-item">@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<style>
    .page-title {
        font-size: 2em;
        text-align: center;
        margin-bottom: 20px;
    }

    .movie-form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #333;
    }

    .form-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        box-sizing: border-box;
    }

    .form-input:focus {
        outline-color: #007bff;
        border-color: #007bff;
    }

    .btn-submit {
        background-color: #007bff;
        color: #fff;
        padding: 12px 20px;
        font-size: 1.1em;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

    .btn-submit:hover {
        background-color: #0056b3;
    }

    .error-messages {
        margin-top: 20px;
        padding: 10px;
        background-color: #f8d7da;
        color: #721c24;
        border-radius: 4px;
    }

    .error-item {
        margin: 5px 0;
    }
</style>
